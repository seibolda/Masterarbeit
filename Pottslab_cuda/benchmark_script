imagePath="../data/images/archutah.png"
gpu=true
maxIterations=50

cd ~/Documents/Masterarbeit/Pottslab_cuda/

for gamma in 0.01 0.03 0.06 0.1 0.3 0.06 1 3 6 10 
do
    for chunkSize in 2 20 50 100 300 1000 
    do
        echo "CPU: gamma: ${gamma} chunkSize: ${chunkSize}" 
        ./Pottslab_cuda -i $imagePath -gamma $gamma -v true -chunksize $chunkSize -maxiterations $maxIterations
        for xBlockSize in 1024 512 256 128 64 32 16 8
        do
            for yBlockSize in 1 2 4 8 16 32 64 128
            do     
                echo "GPU: xBlock: ${xBlockSize} yBlock: ${yBlockSize}"  
                ./Pottslab_cuda -i $imagePath -gamma $gamma -v true -gpu $gpu -xblocksize $xBlockSize -yblocksize $yBlockSize -chunksize $chunkSize -maxiterations $maxIterations
                printf "\n\n"
            done
        done
    done
done
